<div class="page-header">
  <%= link_to scoops_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_scoop_path(@scoop), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Check out the scoop</h1>
</div>

<dl class="dl-horizontal">
  <dt>Headline:</dt>
  <dd><%= @scoop.headline %></dd>

  <dt>Story:</dt>
  <dd><%= @scoop.story %></dd>

  <dt>Scooped at:</dt>
  <dd><%= @scoop.created_at %></dd>
</dl>

