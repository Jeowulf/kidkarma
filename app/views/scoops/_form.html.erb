<%= form_for(@scoop, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @scoop.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@scoop.errors.count, "error") %> prohibited this scoop from being saved:</h4>

      <ul>
      <% @scoop.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :headline, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :headline, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :story, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :story, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
