<div class="page-header">
  <%= link_to new_vote_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Vote
  <% end %>
  <h1>Listing votes</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Color</th>
            <th>Kid</th>
            <th>Scoop</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @votes) do |vote| %>
            <td><%= vote.color %></td>
            <td><%= vote.kid %></td>
            <td><%= vote.scoop %></td>
            <td><%= link_to 'Show', vote %></td>
        <td><%= link_to 'Edit', edit_vote_path(vote) %></td>
        <td><%= link_to 'Destroy', vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
