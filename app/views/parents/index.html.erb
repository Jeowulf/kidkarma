<div class="page-header">
  <%= link_to new_parent_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Parent
  <% end %>
  <h1>Listing parents</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>Password dig</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @parents) do |parent| %>
            <td><%= parent.first_name %></td>
            <td><%= parent.last_name %></td>
            <td><%= parent.email %></td>
            <td><%= parent.password_dig %></td>
            <td><%= link_to 'Show', parent %></td>
        <td><%= link_to 'Edit', edit_parent_path(parent) %></td>
        <td><%= link_to 'Destroy', parent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
